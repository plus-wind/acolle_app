<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <h2 class=>注文内容確認</h2>
          <!-- 商品情報を表示 -->
          <%= form_for(@order,url:order_confirmation_path, html: {method: "put"} ) do |f|%>
          <div class="title">商品情報</div><br>
            <% total_price = 0 %>
              <% @carts.each do |cart| %>
                <section class="item">
                  <div class="img">
                  <%= attachment_image_tag cart.item, :item_image, :fill, 60, 60, format: 'jpeg', class:"img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                  </div>
                  <div class="itemname"><%= cart.item.item_name %></div>
                  <div class="item-info-price">
                    金額：<%= cart.item.item_price %> 円(税込)<br>
                    個数：<%= cart.cart_item_number %> 枚
                    <% total_price += cart.item.item_price * cart.cart_item_number%>
                  </div>
                </section>
              <% end %>
              <section class="pay">
                <div class="title">支払い情報</div><br><br>
                <p><%= @shiharai %></p>
                <p style="text-align: right">送料:<%= @order.postage %>円 </p>
                <p style="text-align: right">合計金額:<%= total_price + @order.postage %>円(税込)</p>
              </section>
              <section class="order">
                <div class="title">お届け先</div><br><br>
                <%= @order.delivery_name_family_kanji + "　" + @order.delivery_name_first_kanji %><br>
                <%= "〒" + @order.delivery_postal_code + "　" + @order.delivery_address_prefecture + @order.delivery_address_city + @order.delivery_address_number + @order.delivery_address_building %>
            </section>
            <div class="button-under">
              <%= link_to '戻る', :back , class: "btn btn-default back" %>
              <%= submit_tag '確定', class: "btn btn-success ok" %>
            </div>
              <%= f.hidden_field :user_id, value: @order.user_id %>
              <%= f.hidden_field :delivery_name_family_kanji, value: @order.delivery_name_family_kanji %>
              <%= f.hidden_field :delivery_name_first_kanji, value: @order.delivery_name_first_kanji %>
              <%= f.hidden_field :delivery_name_family_furigana, value: @order.delivery_name_family_furigana %>
              <%= f.hidden_field :delivery_name_first_furigana, value: @order.delivery_name_first_furigana %>
              <%= f.hidden_field :delivery_postal_code, value: @order.delivery_postal_code %>
              <%= f.hidden_field :delivery_address_prefecture, value: @order.delivery_address_prefecture %>
              <%= f.hidden_field :delivery_address_city, value: @order.delivery_address_city %>
              <%= f.hidden_field :delivery_address_number, value: @order.delivery_address_number %>
              <%= f.hidden_field :delivery_address_building, value: @order.delivery_address_building %>
              <%= f.hidden_field :delivery_address_number, value: @order.delivery_address_number %>
              <%= f.hidden_field :order_status, value: "0" %>
              <%= f.hidden_field :total_fee, value: @order.total_fee %>
              <%= f.hidden_field :postage, value: @order.postage %>
          <% end %>
      </div>
    </div>
  </div>


      <p><%= @name %></br>

</body>

