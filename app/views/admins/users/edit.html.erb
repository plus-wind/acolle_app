<%= stylesheet_link_tag "admins/users", :media => "all" %>

<div class="signin_container container">
<h2>顧客情報の編集 </h2>

<%= form_for @user, url:admins_user_path(@user) do |f| %>

    <div class="name_kanji field">
      <div class="field">
        <%= f.label :"氏名　　　　　　　　　姓" %>
        <%= f.text_field :name_family_kanji, autofocus: true  %>
        <%= f.label :"　　名" %>
        <%= f.text_field :name_first_kanji, autofocus: true  %>
      </div>
    </div>

    <div class="name_furigana line">
      <div class="field">
        <%= f.label :"氏名（フリガナ）　　セイ" %>
        <%= f.text_field :name_family_furigana, autofocus: true  %>
        <%= f.label :"　メイ" %>
        <%= f.text_field :name_first_furigana, autofocus: true  %>
      </div>
    </div>

    <div class="email line">
      <div class="field">
        <%= f.label :"メールアドレス　　　　　" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

    <div class="postal_code line">
      <div class="field">
        <%= f.label :"郵便番号　　　　　　　　" %>
        <%= f.text_field :postal_code, autofocus: true  %>
      </div>
    </div>

    <div class="address_prefecture line">
      <div class="field">
        <%= f.label :"都道府県　　　　　　　　" %>
        <%= f.text_field :address_prefecture, autofocus: true  %>
      </div>
    </div>

    <div class="address_city line">
      <div class="field">
        <%= f.label :"住所１（市区町村）　　　" %>
        <%= f.text_field :address_city, autofocus: true  %>
      </div>
    </div>

    <div class="address_number line">
      <div class="field">
        <%= f.label :"住所２（番地）　　　　　" %>
        <%= f.text_field :address_number, autofocus: true  %>
      </div>
    </div>

    <div class="address_building line">
      <div class="field">
        <%= f.label :"住所３（建物名）　　　　" %>
        <%= f.text_field :address_building, autofocus: true  %>
      </div>
    </div>

    <div class="phone_number line">
      <div class="field">
        <%= f.label :"お電話番号　　　　　　　" %>
        <%= f.text_field :phone_number, autofocus: true  %>
        <%= f.hidden_field :delete_flag, :value => 0 %>
      </div>
    </div>
  <% if @user.delete_flag == 0 %>
  <div class="actions">
      <%= f.submit "更新", class:"btn btn-primary" %>
  </div>
  <% else %>
    <div class="actions">
      <%= f.submit "更新して登録状態に戻す", class:"btn btn-primary" %>
  </div>
  <% end %>
<% end %>


<%= link_to "戻る", admins_user_path(@user), class:"btn btn-info" %>
</div>