<!DOCTYPE html>
<html>
  <head>
    <title>AcolleApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
​
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <% self_css_path = "/assets/"+controller.controller_name  %>
  <%= stylesheet_link_tag self_css_path, :media => "all" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <p id="notice">
      <%=  notice %>
    </p>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <h1 class="title-acolle">Acolle</h1>
        </nav>
        <nav class="search-box">
            <%= form_tag(search_path, method: :get) do %>
            <ul>
		    		<%= radio_button_tag :search_flag, 1, checked: true %><span class="search-title">アーティスト</span>
					  <%= radio_button_tag :search_flag, 2 %><span class="search-title">曲</span>
					  <%= text_field_tag :search_word %>
					  <%= submit_tag "検索" %>
            </ul>
				    <% end %>
          <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>

              <%= link_to " 商品", root_path, class:"glyphicon glyphicon-music" %>
            </li>
            <li>
              <%= link_to  " #{current_user.name_family_kanji}さん", mypage_path, class:"glyphicon glyphicon-user users" %>
            </li>
            <li>
              <%= link_to  cart_path, class:"glyphicon glyphicon-shopping-cart"  do %>
              カート<span class='badge'><%= current_user.carts.count.to_i %></span></a>
              <% end %>
            </li>
            <li>
              <%= link_to " ログアウト", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out logout" %>
            </li>

          <% else %>
            <li>
              <%= link_to " 商品", root_path, class:"glyphicon glyphicon-music" %>
            </li>
            <li>
              <%= link_to " ログイン", new_user_session_path, class:"glyphicon glyphicon-log-in" %>
            </li>
            <li>
              <%= link_to " 新規登録", new_user_registration_path, class:"glyphicon glyphicon-pencil" %>
            </li>
          <% end %>
          </ul>
      </nav><!-- /.input-group -->

      </div>
    </header>

    <div class = "space" style = "height: 70px;"></div>
    <%= yield %>
    <div class="wrapper">
    <footer>
            <p><%= link_to "お問い合わせ",  new_contact_path%></p>
    </footer>
    </div>
  </body>
</html>