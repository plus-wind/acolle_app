<!DOCTYPE html>
<html>
  <head>
    <title>AcolleApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
​
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <% self_css_path = "/assets/"+controller.controller_name  %>
  <%= stylesheet_link_tag self_css_path, :media => "all" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top navbar-default">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Acolle</span>
        </nav>
        <nav class="input-group ">
          <ul class="input-group-btn">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              アーティスト
              <span class="caret"></span>
            </button>
              <span class="dropdown-menu">曲名</span>
            <%= search_form_for @search, url: root_path do |f| %>
            <%= f.text_field :artist_id_cont, placeholder: '検索...', class:"form-control" %>
            <%= f.submit "検索", class:"btn btn-primary mb-2" %>
            <% end %>
          </ul><!-- /.input-group-btn -->
          <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>

              <%= link_to " 商品", root_path, class:"glyphicon glyphicon-music" %>
            </li>
            <li>
              <%= link_to  " #{current_user.name_family_kanji}さん", mypage_path, class:"glyphicon glyphicon-user users" %>
            </li>
            <li>
              <%= link_to " カート", cart_path, class:"glyphicon glyphicon-shopping-cart" %>
            </li>
            <li>
              <%= link_to " ログアウト", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out logout" %>
            </li>

          <% else %>
            <li>
              <%= link_to " 商品", root_path, class:"glyphicon glyphicon-music" %>
            </li>
            <li>
              <%= link_to " ログイン", new_user_session_path, class:"glyphicon glyphicon-log-in" %>
            </li>
            <li>
              <%= link_to " 新規登録", new_user_registration_path, class:"glyphicon glyphicon-pencil" %>
            </li>
          <% end %>
          </ul>
        </nav><!-- /.input-group -->
    </div>
  </header>
      </div>
    </header>
    <div class = "space" style = "height: 70px;"></div>
    <%= yield %>
    <div class="wrapper">
    <footer>
            <p><%= link_to "お問い合わせ",  contacts_path%></p>
    </footer>
    </div>
  </body>
</html>