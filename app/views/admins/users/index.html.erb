<%= stylesheet_link_tag "admins/users", :media => "all" %>
<div class="a_users_container">
	<h1>顧客情報一覧</h1>
<!-- 	<div style="color:red;">
		<%= notice %>
	</div><br> -->
	<div class="search-content">
		<%= form_tag(admins_search_users_path, method: :get) do %>
			<%= radio_button_tag :search_flag, 1, checked: true %>顧客ID
			<%= radio_button_tag :search_flag, 2 %>顧客(漢字)
			<%= radio_button_tag :search_flag, 3 %>顧客(フリガナ)
			<%= text_field_tag :search_word %>
			<%= submit_tag "検索" %>
		<% end %>
	</div><br>
	<table class="table table-bordered" >
		<tr class="active">
	    	<th>顧客ID</th>
	    	<th>顧客名</th>
	    	<th>フリガナ</th>
	    	<th>メールアドレス</th>
	    	<th>会員ステータス</th>
		</tr>
		<% @users.each do |u| %>
		<tr>
	    	<td>
	    		<div>
	    			<%= link_to u.id, admins_user_path(u.id),class: "btn-square-slant"  %>
	    		</div>
	    	</td>
	    	<td><%= u.name_family_kanji + u.name_first_kanji %></td>
	    	<td><%= u.name_family_furigana + u.name_first_furigana %></td>
	    	<td><%= u.email %></td>
	    	<% if u.delete_flag == 0 %>
	    		<td class="bg-success">登録中</td>
	    		<% else %>
	    		<td class="bg-danger">退会</td>
	    		<% end %>
		</tr>
	  	<% end %>
	</table>
</div>

