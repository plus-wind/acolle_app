<body>
<div class="white-box">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_tag(order_path, method: :get) do %>
          <div class="delivery-change">送付先を選択してください</div>
            <% @delivery.each.with_index(1) do |d, id| %>
              <section class="delivery-address">
                <P>送付先<%= id %></p>
                <%= radio_button_tag :delivery_flag, d.id %><br>
                <%= d.delivery_name_family_kanji+ " " + d.delivery_name_first_kanji %><br>
                <%= "〒" + d.delivery_postal_code.insert(3, "-") + "　" + d.delivery_address_prefecture + d.delivery_address_city + d.delivery_address_number + d.delivery_address_building %>
              </section>
            <% end %>
          <%= submit_tag "変更確定" ,:class=>"btn-change" %>
        <% end %>
        <%= link_to "お届け先情報の追加", new_address_path %>
      </div>
    </div>
  </div>
</div>
</body>