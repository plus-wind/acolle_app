<div class="white-box address-edit">
<div class="signin_container container">
<h2 class="page-title">お届け先情報の編集 </h2>

<%= form_for @address, url:address_path(@address) do |f| %>

    <div class="name_kanji field">
      <div class="field">
        <%= f.label :"氏名　　　　　　　　　姓" %>
        <%= f.text_field :delivery_name_family_kanji, autofocus: true  %>
        <%= f.label :"　　名" %>
        <%= f.text_field :delivery_name_first_kanji, autofocus: true  %>
      </div>
    </div>

    <div class="name_furigana line">
      <div class="field">
        <%= f.label :"氏名（フリガナ）　　セイ" %>
        <%= f.text_field :delivery_name_family_furigana, autofocus: true  %>
        <%= f.label :"　メイ" %>
        <%= f.text_field :delivery_name_first_furigana, autofocus: true  %>
      </div>
    </div>

    <div class="postal_code line">
      <div class="field">
        <%= f.label :"郵便番号　　　　　　　　" %>
        <%= f.text_field :delivery_postal_code, autofocus: true  %>
        <span>（ハイフン無し）</span>
      </div>
    </div>

    <div class="address_prefecture line">
      <div class="field">
        <%= f.label :"都道府県　　　　　　　　" %>
        <%= f.text_field :delivery_address_prefecture, autofocus: true  %>
      </div>
    </div>

    <div class="address_city line">
      <div class="field">
        <%= f.label :"住所１（市区町村）　　　" %>
        <%= f.text_field :delivery_address_city, autofocus: true  %>
      </div>
    </div>

    <div class="address_number line">
      <div class="field">
        <%= f.label :"住所２（番地）　　　　　" %>
        <%= f.text_field :delivery_address_number, autofocus: true  %>
      </div>
    </div>

    <div class="address_building line">
      <div class="field">
        <%= f.label :"住所３（建物名）　　　　" %>
        <%= f.text_field :delivery_address_building, autofocus: true  %>
      </div>
    </div>

  <div class="actions">
      <%= f.submit "更新", class:"btn btn-primary" %></br>
      <%= link_to "戻る", mypage_path, class:"btn" %></br>
      <%= link_to "情報を削除", address_path(@address), class:"btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？この操作は取り消せません。" %>
  </div>

<% end %>
</div>
</div>


