<div class = "container">
    <div class = "row-1">
        <div class = "col-md-4" style = "padding-top: 30px;">
        <button class="btn btn-default btn-lg">カートを空にする</button>
        </div>
    </div>
    <div class = "row-2">
        <table class = "table1">
            <tbody>
                <% @carts.each do |cart| %>
                <h2>カート情報</h2>
                <tr>
                    <td><%= attachment_image_tag cart.item, :item_image, :fill, 60, 60, format: 'jpeg', class:"img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                    <td>
                    <%= cart.item.item_name %>
                    <%= link_to "削除", cart_path(cart), method: :delete, class:"btn-sm btn-danger" %>
                    </td>
                </tr>

                <% end %>
            </tbody>
        </table>
    </div>
    <div class = "row-3">
        <div class = "col-md-10 goorder">
        <%= link_to "商品購入ページへ", order_path, class:"btn btn-success btn-lg", style:"float: right;" %>
        </div>
    </div>
</div>